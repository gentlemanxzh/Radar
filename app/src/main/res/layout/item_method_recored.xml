<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_container"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="3dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fl_line_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="100.0">

        <com.addcn.monitor.activity.MethodRecordLineView
            android:id="@+id/mlv_method"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_method_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_method_info_out"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="100.0"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp" />
</LinearLayout>
